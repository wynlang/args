fn parse_flag(args: array, flag: string) -> bool {
    for i in 0..args.len() {
        var a = "" + args[i]
        if a == flag { return true }
    }
    return false
}
fn parse_value(args: array, flag: string) -> string {
    for i in 0..args.len() {
        var a = "" + args[i]
        if a == flag && i + 1 < args.len() { return "" + args[i + 1] }
    }
    return ""
}
fn main() -> int {
    Test.init("args")
    var test_args = ["app", "--verbose", "--port", "8080", "run"]
    Test.assert(parse_flag(test_args, "--verbose"), "flag found")
    Test.assert(!parse_flag(test_args, "--debug"), "flag missing")
    Test.assert_eq_str(parse_value(test_args, "--port"), "8080", "value")
    Test.assert_eq_str(parse_value(test_args, "--host"), "", "missing value")
    Test.summary()
    return 0
}
